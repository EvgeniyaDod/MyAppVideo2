<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/layuot0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layuot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000000">

            <RelativeLayout
                android:id="@+id/layuot2"
                android:layout_width="wrap_content"
                android:layout_height="270sp"
                android:layout_weight="2"
                android:background="@drawable/border_video">

                <VideoView
                    android:id="@+id/myVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ProgressBar
                    android:id="@+id/video_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layuot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical"
                android:background="#000000">

                <Button
                    android:id="@+id/up"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_arrow_upward_black_24dp" />

                <SeekBar
                    android:id="@+id/seekVertMove"
                    android:layout_width="220sp"
                    android:layout_height="220sp"
                    android:max="14"
                    android:progress="7"
                    android:rotation="270"
                    android:layout_marginRight="-120sp"
                    android:layout_marginLeft="-120sp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/down"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layuot4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/left"
                android:background="@drawable/ic_arrow_back_black_24dp"
                />
            <SeekBar
                android:layout_width="280sp"
                android:layout_height="wrap_content"
                android:id="@+id/seekHorMove"
                android:layout_gravity="center_vertical"
                android:progress="16"
                android:max="32"
                />
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:id="@+id/right"
                android:background="@drawable/ic_arrow_forward_black_24dp"
                />
        </LinearLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ckMoveAcc"
            android:id="@+id/checkAcc"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"
            android:backgroundTint="@color/cardview_dark_background"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Масштаб:"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginLeft="5pt"
            />
        <LinearLayout
            android:id="@+id/layuot5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/leftZoom"
                android:background="@drawable/ic_remove_black_24dp"
                android:layout_marginLeft="5pt"
                />
            <SeekBar
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:id="@+id/seekHorZoom"
                android:layout_gravity="center_vertical"
                android:progress="0"
                android:max="50"
                />
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:id="@+id/rightZoom"
                android:background="@drawable/ic_add_black_24dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фокус:"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="5pt"
            android:id="@+id/txFocus"
            />
        <LinearLayout
            android:id="@+id/layuot6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/leftFocus"
                android:background="@drawable/ic_remove_black_24dp"
                android:layout_marginLeft="5pt"
                />
            <SeekBar
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:id="@+id/seekHorFocus"
                android:layout_gravity="center_vertical"
                android:progress="25"
                android:max="50"
                />
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:id="@+id/rightFocus"
                android:background="@drawable/ic_add_black_24dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Яркость:"
            android:textSize="16sp"
            android:textColor="#FF000000"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="15sp"
            android:id="@+id/txIris"
            />
        <LinearLayout
            android:id="@+id/layuot7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/leftIris"
                android:background="@drawable/ic_remove_black_24dp"
                android:layout_marginLeft="5pt"
                />
            <SeekBar
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:id="@+id/seekHorIris"
                android:layout_gravity="center_vertical"
                android:progress="25"
                android:max="50"
                />
            <Button
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:id="@+id/rightIris"
                android:background="@drawable/ic_add_black_24dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>